{
  "name": "@research-agent/backend",
  "version": "1.0.0",
  "description": "Backend service for research paper generation agent",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "install:safe": "npm install --legacy-peer-deps"
  },
  "dependencies": {
    "@google/generative-ai": "latest",
    "@prisma/client": "latest",
    "axios": "latest",
    "bcryptjs": "latest",
    "cheerio": "latest",
    "compromise": "latest",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "express-rate-limit": "latest",
    "helmet": "latest",
    "jsonwebtoken": "latest",
    "jspdf": "latest",
    "multer": "latest",
    "natural": "latest",
    "node-cron": "latest",
    "openai": "latest",
    "pdf-lib": "latest",
    "puppeteer": "latest",
    "redis": "latest",
    "socket.io": "latest",
    "turndown": "latest",
    "uuid": "latest",
    "winston": "latest",
    "zod": "latest"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "latest",
    "@types/express": "latest",
    "@types/jest": "latest",
    "@types/jsonwebtoken": "latest",
    "@types/multer": "latest",
    "@types/node": "latest",
    "@types/node-cron": "latest",
    "@types/swagger-jsdoc": "latest",
    "@types/swagger-ui-express": "latest",
    "@types/uuid": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "jest": "latest",
    "nodemon": "latest",
    "prisma": "latest",
    "ts-jest": "latest",
    "ts-node": "latest",
    "tsx": "latest",
    "typescript": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "npmrc": "--legacy-peer-deps=true"
}
